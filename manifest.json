{
	"manifest_version" : 2,

	"name" : "Sizer",
	"description" : "Resize Chrome windows quickly.",
	"version" : "2.0",

	"icons" : {
		"16" : "icon16.png",
		"48" : "icon48.png",
		"128" : "icon128.png"
	},

	"permissions" : [
		"tabs"
	],

	"commands" : {
		"window-left" : {
		  "suggested_key" : {
		      "default" : "Alt+H"
		  },
		  "description" : "Move the window to the left half of the screen"
		},
		"window-right" : {
		  "suggested_key" : {
		      "default" : "Alt+L"
		  },
		  "description" : "Move the window to the right half of the screen"
		},
		"window-full" : {
		  "suggested_key" : {
		      "default" : "Alt+J"
		  },
		  "description" : "Make the window fullscreen"
		}
	},

	"background": {
		"persistent": false,
		"scripts": [
		    "background.js"
		]
	},

	"browser_action" : {
		"default_icon" : "icon.png",
		"default_popup" : "popup.html"
	}
}